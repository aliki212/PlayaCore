@model PlayaListViewModel

<h1>@Model.Header</h1>

@foreach (var playa in Model.Playas)
{
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@playa.ImageUrl" alt="No Photo" class="img-responsive">
        <div class="caption">
            <h3 class="pull-right">@playa.Position</h3>
            <h3>
                <a asp-controller="Playa" asp-action="Details" asp-route-id="@playa.Id">@playa.FullName </a>
            </h3>
            <p>@playa.Team</p>
        </div>
    </div>
</div>}